    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/Theme1.css" rel="stylesheet" />

</head>

<body>
   @Html.Partial("_NavigationBar")

    <div class="body-content">
            @RenderBody()
            <hr />
           
           <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Appointments Application</p>
            </footer>

        </div>


    @Scripts.Render("~/bundles/custom-scripts")
    @RenderSection("scripts", required: false)
</body>

</html>
