@model AppointmentManager.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Personal settings";

    string modal_label_width = "col-md-3 col-sm-4 col-xs-5";
    string modal_input_width = "col-md-9 col-sm-8 col-xs-7";

    string modal_label_css = "text-align:right;";
}

@using (Html.BeginForm("ChangePasswordAction", "UserManagement", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div class="form-wrapper ">
            <div class="modal-content modal-centered fixed-width-650 max-width-90">
                <div class="modal-header header-green">
                    <h4 class="max-width-60 dis-inline-block">Change password</h4>
                </div>

                <div class="modal-body">

                    <div class="row">
                        <div class="@modal_label_width" style="@modal_label_css"><label> New password </label></div>
                        <div class="@modal_input_width"> <input class="modal-input" name="Password" type="password" value="" /></div>
                    </div>

                    <div class="row">
                        <div class="@modal_label_width" style="@modal_label_css"><label> Confirm password </label></div>
                        <div class="@modal_input_width"> <input class="modal-input" name="ConfirmPassword" type="password" value="" /></div>
                    </div>

                </div>

                <div class="modal-footer m-t-0 p-t-10 p-b-10 ">

                    <div class="col-md-4 col-md-offset-8 col-xs-12">
                        <button type="submit" class="btn btn-success fill-width btn-close-modal">Submit changes</button>
                    </div>
                </div>

            </div>
    </div>
}

<link href="~/Content/responsive-table.css" rel="stylesheet" />



